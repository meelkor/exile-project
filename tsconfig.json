{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "ES2021.WeakRef"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "paths": {
        "@@/*": ["packages/*/src/"],
    },
  }
}
